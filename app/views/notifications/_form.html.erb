<%= form_with(model: notification) do |form| %>
  <% if notification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

      <ul>
        <% notification.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>

  <div class="field">
    <%= form.label :format %>
    <!-- <%= form.text_field :format %> -->
    <%= form.select :format, options_for_select(['html', 'text'], selected: form.object.format ) %>
  </div>

  <div class="field">
    <%= form.label :disabled %>
    <%= form.check_box :disabled %>
  </div>

  <!-- <div class="field"> -->
  <!--   <%= form.label :send_at %> -->
  <!--   <%= form.datetime_select :send_at %> -->
  <!-- </div> -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
